<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="49dp"
        android:gravity="center"
        android:text="Earliest start next day" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableLayout1" >

        <RadioButton
            android:id="@+id/WOCLno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/WOCL_no" />

        <RadioButton
            android:id="@+id/WOCLyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WOCL_yes"
            android:textColor="@color/red" />
    </RadioGroup>

    <TableLayout
        android:layout_height="100dp"
        android:layout_weight="1"
        android:id="@+id/tableLayout1"
        android:padding="20dip"
        android:layout_width="match_parent"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/numberPicker1"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_above="@+id/tableRow1"
            android:layout_alignLeft="@+id/tableRow1" >

            <TextView
                android:id="@+id/firstcolumn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:text="Duty Start Time"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/secondcolumn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:text="Normal Duty Finish"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/secondcolumn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d3d3d3"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:text="No. Sectors"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_height="5px"
            android:background="#BDBDBD" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_span="2" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:stretchColumns="1" >

            <EditText
                android:id="@+id/firstcolumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:gravity="center"
                android:textSize="11sp"
                android:hint="Type Show Time"
                android:inputType="number"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:textColor="#000000" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/secondcolumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/thirdcolumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d3d3d3"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_height="5px"
            android:background="#BDBDBD" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/thirdcolumn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:text="Actual Close Time"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/thirdcolumn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:text="Earliest Next Start"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/thirdcolumn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d3d3d3"
                android:gravity="center"
                android:maxHeight="45dp"
                android:padding="10dip"
                android:text="Total Duty Length"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_height="5px"
            android:background="#BDBDBD" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp" >

            <EditText
                android:id="@+id/forthcolumn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:gravity="center"
                android:textSize="10sp"
                android:hint="Enter duty end time"
                android:inputType="number"
                android:minHeight="50dp"
                android:padding="10dip"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/forthcolumn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:minHeight="50dp"
                android:padding="10dip"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/forthcolumn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d3d3d3"
                android:gravity="center"
                android:minHeight="50dp"
                android:padding="5dip"
                android:textColor="#000000" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/numberPicker1"
        android:layout_alignTop="@+id/radioGroup1"
        android:background="@drawable/btn_white_matte"
        android:gravity="center"
        android:text="No. Sectors"
        android:textSize="19dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_matte"
        android:height="80dp"
        android:text="@string/Button1"
        android:textColor="@color/green"
        android:textSize="40dp"
        android:width="240dp"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/secondPage"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Page"
        android:onClick="sendMessage"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <NumberPicker
        android:id="@+id/numberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_alignBottom="@+id/secondPage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/vistalogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>